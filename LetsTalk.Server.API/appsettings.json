{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "MySql": "server=localhost; database=letstalk; user=root; password=hello@123",
    "MongoDB": "mongodb://localhost:27017",
    "Redis": "localhost:6379"
  },
  "ApplicationUrls": {
    "Authentication": "https://127.0.0.1:5001"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "./logs/log-.txt",
          "rollingInterval": "Day"
        }
      }
    ]
  },
  "Kafka": {
    "Url": "127.0.0.1:9092"
  },
  "Aws": {
    "AccessKey": "",
    "SecretKey": "",
    "Region": ""
  },
  "Topics": {
    "MessageNotification": "letstalk-message-notification-topic",
    "LinkPreviewRequest": "letstalk-link-preview-request-topic",
    "ImageResizeRequest": "letstalk-image-resize-request-topic",
    "SetImageDimensionsRequest": "letstalk-set-image-dimensions-request-topic",
    "RemoveImageRequest": "letstalk-remove-image-request-topic",
    "SendLoginCodeRequest": "letstalk-send-login-code-request-topic",
    "LinkPreviewNotification": "letstalk-link-preview-notification-topic",
    "ImagePreviewNotification": "letstalk-image-preview-notification-topic"
  },
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "https://127.0.0.1:5000",
        "Protocols": "Http1AndHttp2"
      }
    }
  },
  "Messaging": {
    "MessagesPerPage": 20
  },
  "Caching": {
    "MessagesCacheLifeTimeInSeconds": 120,
    "ChatCacheLifeTimeInSeconds": 30,
    "AccountCacheLifeTimeInSeconds": 30,
    "ProfileCacheLifeTimeInSeconds": 30,
    "LoginCodeCacheLifeTimeInSeconds": 120
  },
  "MongoDB": {
    "DatabaseName": "LetsTalk"
  },
  "SignPackage": {
    "Salt": "a pinch of salt"
  },
  "Security": {
    "AntiSpamTokenLifeTimeInSeconds": 60
  },
  "Features": {
    "DatabaseMode": "MySql",
    "CachingMode": "redis",
    "EventBrokerMode": "kafka"
  }
}
