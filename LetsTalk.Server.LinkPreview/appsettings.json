{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Kafka": {
    "Url": "127.0.0.1:9092",
    "LinkPreviewRequest": {
      "Topic": "link-preview-request",
      "Producer": "link-preview-request-producer",
      "GroupId": "1"
    },
    "LinkPreviewNotification": {
      "Topic": "link-preview-notification",
      "Producer": "link-preview-notification-producer"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "./logs/log-.txt",
          "rollingInterval": "Day"
        }
      }
    ]
  }
}
