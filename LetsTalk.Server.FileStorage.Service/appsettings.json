{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Kestrel": {
    "Endpoints": {
      "Grpc": {
        "Url": "https://127.0.0.1:5003",
        "Protocols": "Http2"
      }
    }
  },
  "FileStorage": {
    "BasePath": "%LetsTalk_Server_FileStorage%",
    "ImageFolder": "Images",
    "AvatarMaxWidth": 512,
    "AvatarMaxHeight": 512,
    "PictureMaxWidth": 4000,
    "PictureMaxHeight": 4000
  },
  "ConnectionStrings": {
    "MySql": "server=localhost; database=letstalk; user=root; password=hello@123",
    "MongoDB": "mongodb://localhost:27017",
    "Redis": "localhost:6379"
  },
  "AuthenticationSettings": {
    "Url": "https://127.0.0.1:5001"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "./logs/log-.txt",
          "rollingInterval": "Day"
        }
      }
    ]
  },
  "Kafka": {
    "Url": "127.0.0.1:9092",
    "RemoveImageRequest": {
      "Topic": "remove-image-request",
      "GroupId": "1"
    }
  },
  "Caching": {
    "imagesCacheLifeTimeInSeconds": 300,
    "imageSizeThresholdInBytes": 1000000,
    "cachingMode": "redis"
  },
  "Database": {
    "databaseType": "MongoDB",
    "mongoDatabaseName": "LetsTalk"
  }
}
