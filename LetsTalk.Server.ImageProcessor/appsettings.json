{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Kafka": {
    "Url": "127.0.0.1:9092",
    "ImageResizeRequest": {
      "Topic": "image-resize-request",
      "GroupId": "1"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "./logs/log-.txt",
          "rollingInterval": "Day"
        }
      }
    ]
  },
  "ConnectionStrings": {
    "DbConnectionString": "server=localhost; database=letstalk; user=root; password=hello@123"
  },
  "FileStorage": {
    "BasePath": "%LetsTalk_Server_FileStorage%",
    "ImageFolder": "Images",
    "ImagePreviewMaxWidth": 512,
    "ImagePreviewMaxHeight": 512
  }
}
