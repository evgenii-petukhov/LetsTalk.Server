{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Kestrel": {
    "Endpoints": {
      "Grpc": {
        "Url": "https://127.0.0.1:5003",
        "Protocols": "Http2"
      }
    }
  },
  "FileStorage": {
    "BasePath": "%LetsTalk_Server_FileStorage%",
    "ImageFolder": "Images",
    "AvatarMaxWidth": 512,
    "AvatarMaxHeight": 512,
    "PictureMaxWidth": 4000,
    "PictureMaxHeight": 4000
  },
  "ConnectionStrings": {
    "Redis": "localhost:6379"
  },
  "ApplicationUrls": {
    "Authentication": "https://127.0.0.1:5001"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "./logs/log-.txt",
          "rollingInterval": "Day"
        }
      }
    ]
  },
  "Kafka": {
    "Url": "127.0.0.1:9092",
    "GroupId": "1"
  },
  "Aws": {
    "AccessKey": "",
    "SecretKey": "",
    "Region": ""
  },
  "Topics": {
    "RemoveImageRequest": "letstalk-remove-image-request-topic"
  },
  "Queues": {
    "RemoveImageRequest": "letstalk-remove-image-request-queue"
  },
  "Caching": {
    "ImagesCacheLifeTimeInSeconds": 300,
    "ImageSizeThresholdInBytes": 1000000
  },
  "Features": {
    "CachingMode": "redis",
    "EventBrokerMode": "kafka"
  }
}
